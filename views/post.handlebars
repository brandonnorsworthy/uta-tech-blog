<div id={{post.id}}>
    <div>
        <h3>{{post.title}}</h3>
        <p>Posted by {{post.user.username}} on {{post.createdAt}}</p>
    </div>
    <p>{{post.content}}</p>
</div>
<div>
    <ul>
        {{#each post.comments as |comment|}}
        <li>
            <p>{{comment.text}}</p>
            <p>{{comment.createdAt}}</p>
            <p>{{comment.user.username}}</p>
        </li>
        {{/each}}
    </ul>
</div>